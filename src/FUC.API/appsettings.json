    "ExpireMin": 60
  },
  "EventConsumerConfiguration": {
    "DelayTime": 5,
    "MaxRetryCount": 3
  },
  "SystemConfiguration": {
    "MaxTopicsForCoSupervisors": 3,
    "MaxTopicAppraisalsForTopic": 2,
